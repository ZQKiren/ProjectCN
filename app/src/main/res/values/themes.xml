<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Light theme colors -->
    <style name="Base.Theme.MyApp" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Primary brand colors -->
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primary_dark</item>
        <item name="primaryColor">@color/primaryColor</item>
        <item name="colorAccent">@color/accent_color</item>
        <item name="colorPrimaryVariant">@color/primary</item>

        <!-- Secondary colors -->
        <item name="colorSecondary">@color/secondary</item>
        <item name="colorSecondaryVariant">@color/secondary</item>

        <!-- Background colors -->
        <item name="android:colorBackground">@color/background</item>
        <item name="backgroundLight">@color/background_light</item>
        <item name="colorSurface">@color/surface</item>

        <!-- Text colors -->
        <item name="android:textColorPrimary">@color/text_primary</item>
        <item name="android:textColorSecondary">@color/text_secondary</item>
        <item name="android:textColorTertiary">@color/text_tertiary</item>
        <item name="primaryTextColor">@color/primary_text</item>
        <item name="secondaryTextColor">@color/secondary_text</item>
        <item name="colorTextSecondary">@color/colorTextSecondary</item>

        <!-- UI element colors -->
        <item name="cardBackgroundColor">@color/card_background</item>
        <item name="cardBackground">@color/card_background</item>
        <item name="lightCardBackground">@color/card_background_light</item>
        <item name="userDetailBackground">@color/user_detail</item>
        <item name="voucherBackground">@color/voucher_bg</item>
        <item name="voucherTextColor">@color/voucher_text_color</item>

        <!-- Icon colors -->
        <item name="iconColor">@color/icon_color</item>
        <item name="iconEditColor">@color/icon_edit</item>
        <item name="iconVoucherColor">@color/icon_voucher</item>

        <!-- Special colors -->
        <item name="ratingColor">@color/rating_color</item>
        <item name="ratingBackgroundColor">@color/rating_background</item>
        <item name="sloganTextColor">@color/slogan_text_color</item>
        <item name="rippleColor">@color/ripple_color</item>

        <!-- Status colors -->
        <item name="colorError">@color/error</item>
        <item name="errorColor">@color/error_color</item>
        <item name="successColor">@color/success_color</item>
        <item name="warningColor">@color/colorWarning</item>
        <item name="dangerColor">@color/color_danger</item>
        <item name="dividerColor">@color/divider</item>

        <!-- Gray shades -->
        <item name="grayColor">@color/gray</item>
        <item name="lightGrayColor">@color/light_gray</item>
        <item name="gray400Color">@color/gray_400</item>

        <!-- System colors -->
        <item name="android:statusBarColor">@color/status_bar</item>
        <item name="android:navigationBarColor">@color/nav_bar</item>
        <item name="android:windowBackground">@color/background</item>
    </style>

    <style name="CircleImageView" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
        <item name="strokeColor">@color/primary_lighter</item>
    </style>

    <style name="RoundedImageView">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">8dp</item>
    </style>

    <style name="CircleImage">
        <item name="cornerSize">50%</item>
    </style>

    <style name="SearchViewStyle" parent="Widget.AppCompat.SearchView">
        <!-- EditText style -->
        <item name="android:textColorPrimary">@color/text_primary</item>
        <item name="android:textColorHint">@color/text_secondary</item>
        <item name="android:textSize">16sp</item>

        <!-- Icon styles -->
        <item name="searchIcon">@null</item>
        <item name="closeIcon">@drawable/ic_close</item>
        <item name="searchHintIcon">@null</item>

        <!-- No underline -->
        <item name="queryBackground">@null</item>
        <item name="submitBackground">@null</item>
    </style>

    <style name="BottomSheetDialogTheme" parent="Theme.MaterialComponents.Light.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/CustomBottomSheetStyle</item>
        <item name="android:windowIsFloating">false</item>
        <item name="android:windowSoftInputMode">adjustResize</item>
    </style>

    <style name="CustomBottomSheetStyle" parent="Widget.MaterialComponents.BottomSheet.Modal">
        <item name="android:background">@color/surface</item>
        <item name="android:windowIsFloating">false</item>
        <item name="android:windowSoftInputMode">adjustResize</item>
    </style>

    <style name="SpinnerTheme" parent="Widget.AppCompat.Spinner">
        <item name="android:background">@color/white</item>
        <item name="android:popupBackground">@color/white</item>
        <item name="android:textColor">@color/text_primary</item>
    </style>

    <style name="Theme.MyApp" parent="Base.Theme.MyApp" />
</resources>