<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    android:padding="24dp">

    <!-- Header Card -->
    <androidx.cardview.widget.CardView
        android:id="@+id/card_header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:elevation="4dp"
        app:cardCornerRadius="16dp"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <TextView
                android:id="@+id/tv_admin_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="Trang Quản trị"
                android:textColor="@color/primary_text"
                android:textSize="28sp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="8dp"
                android:text="Quản lý hệ thống của bạn"
                android:textColor="@color/secondary_text"
                android:textSize="16sp" />
        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <!-- Menu Buttons Container -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="32dp"
        app:layout_constraintTop_toBottomOf="@id/card_header">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_manage_vouchers"
            android:layout_width="match_parent"
            android:layout_height="64dp"
            android:layout_marginHorizontal="16dp"
            android:layout_marginBottom="16dp"
            android:text="@string/manage_vouchers"
            android:textSize="16sp"
            app:cornerRadius="12dp"
            app:icon="@drawable/ic_voucher"
            app:iconGravity="textStart"
            app:iconPadding="16dp"
            style="@style/Widget.MaterialComponents.Button.OutlinedButton" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_statistics"
            android:layout_width="match_parent"
            android:layout_height="64dp"
            android:layout_marginHorizontal="16dp"
            android:layout_marginBottom="16dp"
            android:text="Thống kê"
            android:textSize="16sp"
            app:cornerRadius="12dp"
            app:icon="@drawable/ic_statistics"
            app:iconGravity="textStart"
            app:iconPadding="16dp"
            style="@style/Widget.MaterialComponents.Button.OutlinedButton" />

        <!-- Manage Products Button -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_manage_products"
            android:layout_width="match_parent"
            android:layout_height="64dp"
            android:layout_marginHorizontal="16dp"
            android:layout_marginBottom="16dp"
            android:text="Quản lý sản phẩm"
            android:textSize="16sp"
            app:cornerRadius="12dp"
            app:icon="@drawable/ic_inventory"
            app:iconGravity="textStart"
            app:iconPadding="16dp"
            style="@style/Widget.MaterialComponents.Button.OutlinedButton" />

        <!-- Manage Accounts Button -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_manage_accounts"
            android:layout_width="match_parent"
            android:layout_height="64dp"
            android:layout_marginHorizontal="16dp"
            android:text="Quản lý tài khoản"
            android:textSize="16sp"
            app:cornerRadius="12dp"
            app:icon="@drawable/ic_people"
            app:iconGravity="textStart"
            app:iconPadding="16dp"
            style="@style/Widget.MaterialComponents.Button.OutlinedButton" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_manage_orders"
            android:layout_width="match_parent"
            android:layout_height="64dp"
            android:layout_marginHorizontal="16dp"
            android:text="Quản lý đơn hàng"
            android:textSize="16sp"
            app:cornerRadius="12dp"
            app:icon="@drawable/ic_manage_orders"
            app:iconGravity="textStart"
            app:iconPadding="16dp"
            style="@style/Widget.MaterialComponents.Button.OutlinedButton" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>